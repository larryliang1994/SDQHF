<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sendmsg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11c0c0c0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF5252"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_sendmsg_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:background="@null"
            android:contentDescription="@string/hello"
            android:scaleType="centerInside"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_new"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_sendmsg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#9fffffff"
            android:textSize="13sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center">

        <EditText
            android:id="@+id/editText_sendmsg_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="#ffffff"
            android:ellipsize="end"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/msg_contact_input"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/imageButton_sendmsg_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:contentDescription="@string/hello"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/contact_add_selector" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#B6B6B6"
        android:contentDescription="@string/hello" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0"
        android:contentDescription="@string/hello" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/imageButton_sendmsg_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@null"
            android:contentDescription="@string/hello"
            android:paddingLeft="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/contact_add_selector" />

        <ImageButton
            android:id="@+id/imageButton_sendmsg_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:contentDescription="@string/hello"
            android:scaleType="fitCenter"
            android:src="@drawable/sendout_selector" />

        <EditText
            android:id="@+id/editText_sendmsg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imageButton_sendmsg_send"
            android:layout_toRightOf="@id/imageButton_sendmsg_menu"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/msg_content_input"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textColor="#212121"
            android:textSize="15sp">
        </EditText>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/editText_sendmsg_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/imageButton_sendmsg_send"
            android:layout_toRightOf="@id/imageButton_sendmsg_menu"
            android:background="#C0C0C0"
            android:contentDescription="@string/hello" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_sendmsg_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"/>

        <LinearLayout
            android:id="@+id/linearLayout_sendmsg_menu_temp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_sendmsg_menu_temp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/menu_temp_selector"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/temp_choose"
                android:textColor="#727272"
                android:textSize="13sp" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"/>

        <LinearLayout
            android:id="@+id/linearLayout_sendmsg_menu_settime"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_sendmsg_menu_settime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/settime_selector"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/msg_settime"
                android:textColor="#727272"
                android:textSize="13sp" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_sendmsg_menu_urgent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/urgent_selector"
                android:contentDescription="@string/hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/msg_urgent"
                android:textColor="#727272"
                android:textSize="13sp" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Others/EngineeringPractice/android/ShouDaoQingHuiFu/res/layout/xml_sendmsg.xml -->