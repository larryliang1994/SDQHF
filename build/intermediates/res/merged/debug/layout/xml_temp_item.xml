<?xml version="1.0" encoding="utf-8"?>
<com.nuaa.shoudaoqinghuifu.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:rv_rippleDuration="100"
    app:rv_type="rectangle"
    app:rv_zoom="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_temp_item"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardBackgroundColor="#164616"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_temp_item_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="5"
                android:padding="16dp"
                android:text="哈哈指一个人发自内心的笑声，高兴欢乐时的状态，表现一个人很开心的状态。也指人通常用来开玩笑。人的一种笑声，高兴，开心。出处：《水浒传》第三一回：“武松讨面镜子照了，也自哈哈大笑起来。”"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_temp_item_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#33000000"
                android:ellipsize="end"
                android:ems="8"
                android:gravity="center"
                android:text="@string/temp"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.nuaa.shoudaoqinghuifu.RippleView>
