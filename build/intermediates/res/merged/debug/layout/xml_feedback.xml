<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_feedback"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#03A9F4"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/back_selector"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/feedback" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/editText_feedback_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/shape_round"
        android:gravity="top"
        android:hint="@string/feedback_content_hint"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:textColor="#212121"
        android:textSize="18.0sp" />

    <EditText
        android:id="@+id/editText_feedback_contact_edit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round"
        android:gravity="center_vertical"
        android:hint="@string/feedback_contact_hint"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="#212121"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#03A9F4"
        android:padding="10dp"
        android:text="@string/submit"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout><!-- From: file:/C:/Users/huangyu/Desktop/ShouDaoQingHuiFu_2015_8_22/SDQHF/res/layout/xml_feedback.xml -->