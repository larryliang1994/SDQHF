<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="NavigationMenuStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/in_left_right</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/out_right_left</item>    //退出时的动画
    </style>

    <style name="Theme.Application" parent="@style/Theme.AppCompat" />

    <!--浅色彩虹主题-->
    <style name="Theme_Colorful_Light" parent="AppTheme">
        <item name="msg">@color/red</item>
        <item name="group">@color/blue</item>
        <item name="memo">@color/purple</item>
        <item name="temp">@color/green</item>
        <item name="other">@color/blue</item>
    </style>

    <!--深色彩虹主题-->
    <style name="Theme_Colorful_Deep" parent="AppTheme">
        <item name="msg">@color/red_deep</item>
        <item name="group">@color/blue_deep</item>
        <item name="memo">@color/purple_deep</item>
        <item name="temp">@color/green_deep</item>
        <item name="other">@color/blue_deep</item>
    </style>

    <!--浅蓝主题-->
    <style name="Theme_Blue" parent="AppTheme">
        <item name="msg">@color/blue</item>
        <item name="group">@color/blue</item>
        <item name="memo">@color/blue</item>
        <item name="temp">@color/blue</item>
        <item name="other">@color/blue</item>
    </style>

    <!--夜间主题-->
    <style name="Theme_Dark" parent="AppTheme">
        <item name="msg">@color/dark</item>
        <item name="group">@color/dark</item>
        <item name="memo">@color/dark</item>
        <item name="temp">@color/dark</item>
        <item name="other">@color/dark</item>
    </style>

</resources>